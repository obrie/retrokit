{
  "system": "atari2600",
  "metadata": {
    "path": "$RETROKIT_HOME/data/atari2600.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-Atari2600/raw/master/retroarch/overlay/Atari-2600.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Atari2600",
        "path": "retroarch/overlay/GameBezels/Atari2600"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-Atari2600",
        "path": "retroarch/overlay/GameBezels/Atari2600"
      }
    ]
  },
  "emulators": {
    "lr-stella": {
      "default": true,
      "core_name": "stella",
      "library_name": "Stella"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Atari - 2600"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Atari - 2600 (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Atari - 2600.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/atari2600/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/atari2600/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/atari2600", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
