{
  "system": "gbc",
  "metadata": {
    "path": "$RETROKIT_HOME/data/gbc.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-GBC/raw/master/retroarch/overlay/Nintendo-Game-Boy-Color.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GBC",
        "path": "retroarch/overlay/GameBezels/GBC"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-GBC",
        "path": "retroarch/overlay/GameBezels/GBC"
      }
    ]
  },
  "emulators": {
    "lr-mgba": {
      "default": true,
      "core_name": "mgba",
      "library_name": "mGBA"
    },
    "lr-tgbdual": {
      "core_name": "tgbdual",
      "library_name": "TGB Dual",
      "gamestate": [
        "{rom_dir}/{rom}.rtc"
      ]
    }
  },
  "cheats": {
    "names": [
      "Nintendo - Game Boy Color"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo - Gameboy Color",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "cgb_boot.bin": "{url}/cgb_boot.bin",
      "gbc_bios.bin": "{url}/gbc_bios.bin"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Nintendo - Game Boy Color"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Nintendo - Game Boy Color (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Nintendo - Game Boy Color.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gbc/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/gbc/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {
        "path": "$HOME/RetroPie/roms/gbc",
        "filters": {}
      },
      {
        "path": "$HOME/RetroPie/roms/gbc/-2 Player-",
        "filters": {
          "peripherals": ["link_cable"]
        }
      }

    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}