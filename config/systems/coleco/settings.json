{
  "system": "coleco",
  "metadata": {
    "path": "$RETROKIT_HOME/data/coleco.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-ColecoVision/raw/master/retroarch/overlay/Colecovision.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-ColecoVision",
        "path": "retroarch/overlay/GameBezels/ColecoVision"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-ColecoVision",
        "path": "retroarch/overlay/GameBezels/ColecoVision"
      }
    ]
  },
  "emulators": {
    "lr-bluemsx": {
      "default": true,
      "core_name": "bluemsx",
      "library_name": "blueMSX",
      "gamestate": [
        "{rom_dir}/{rom}.sram"
      ]
    }
  },
  "cheats": {
    "names": [
      "Coleco - ColecoVision"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Coleco - ColecoVision",
    "dir": "$HOME/RetroPie/BIOS/Machines/COL - ColecoVision",
    "files": {
      "coleco.rom": "{url}/colecovision.rom"
    }
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL/no-intro_romsets_files.xml"
        ],
        "match": "no-intro romsets/Coleco - ColecoVision"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Coleco - ColecoVision (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Coleco - ColecoVision.*\\.dat", "overwrite_target": true}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/coleco/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/coleco/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/coleco", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}