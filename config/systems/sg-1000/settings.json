{
  "system": "sg-1000",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-SG-1000",
        "path": "retroarch/overlay/GameBezels/SG-1000"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-SG-1000",
        "path": "retroarch/overlay/GameBezels/SG-1000",
        "default": "retroarch/overlay/Sega-SG-1000.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Sega - SG-1000"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Sega - SG-1000 (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/sg-1000/.nointro/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "metadata": {
    "manual": {
      "source": "file://$HOME/retrokit/config/systems/sg-1000/manuals.tsv"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/sg-1000.json"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
      "flags": [
        "English",
        "Europe"
      ],
      "length": "ascending"
    },
    "filters": {
      "flags": [
        "Australia",
        "English",
        "Europe"
      ],
      "!flags": [
        "Beta",
        "Proto",
        "Unl"
      ],
      "!genres": [
        null,
        "Board game",
        "Casino",
        "Compilation",
        "Educational"
      ],
      "!keywords": [
        "BIOS"
      ],
      "demo": [
        "Sega-Galaga"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/sg-1000", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
