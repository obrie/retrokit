{
  "system": "sg-1000",
  "metadata": {
    "path": "$RETROKIT_HOME/data/sg-1000.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelproject-SG-1000/raw/master/retroarch/overlay/Sega-SG-1000.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-SG-1000",
        "path": "retroarch/overlay/GameBezels/SG-1000"
      }
    ]
  },
  "emulators": {
    "lr-genesis-plus-gx": {
      "default": true,
      "core_name": "genesis_plus_gx",
      "library_name": "Genesis Plus GX"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Sega - SG-1000"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sega - SG-1000 (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sega - SG-1000.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/sg-1000/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/sg-1000/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": {
        "type": "internetarchive"
      }
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/sg-1000", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
