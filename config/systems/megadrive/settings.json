{
  "system": "megadrive",
  "metadata": {
    "path": "$RETROKIT_HOME/data/megadrive.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-MegaDrive/raw/master/retroarch/overlay/Sega-Mega-Drive.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-MegaDrive",
        "path": "retroarch/overlay/GameBezels/Megadrive"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-MegaDrive",
        "path": "retroarch/overlay/GameBezels/Megadrive"
      }
    ]
  },
  "emulators": {
    "lr-genesis-plus-gx": {
      "default": true,
      "core_name": "genesis_plus_gx",
      "library_name": "Genesis Plus GX"
    }
  },
  "cheats": {
    "names": [
      "Sega - Mega Drive - Genesis"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Sega - Mega Drive - Genesis",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_MD.bin": "{url}/bios_MD.bin"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Sega - Mega Drive - Genesis"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sega - Mega Drive - Genesis (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sega - Mega Drive - Genesis.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/megadrive/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/megadrive/.nointro/.xrefs/{machine_id}.zip"
        }
      }
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/megadrive", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}