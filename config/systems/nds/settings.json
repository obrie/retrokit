{
  "system": "nds",
  "metadata": {
    "path": "$RETROKIT_HOME/data/nds.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-NDS/raw/master/retroarch/overlay/Nintendo-DS.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-NDS",
        "path": "retroarch/overlay/GameBezels/NDS"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-NDS",
        "path": "retroarch/overlay/GameBezels/NDS"
      }
    ],
    "lightgun_border": {
      "#offset_x": 585
    }
  },
  "emulators": {
    "drastic": {
      "default": true,
      "gamestate": [
        "/opt/retropie/configs/nds/drastic/backup/{rom}.dsv",
        "/opt/retropie/configs/nds/drastic/savestates/*"
      ]
    },
    "lr-desmume": {
      "core_name": "desmume",
      "library_name": "DeSmuME",
      "gamestate": [
        "{rom_dir}/{rom}.dsv"
      ]
    }
  },
  "cheats": {
    "names": [
      "Nintendo - Nintendo DS"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo - Nintendo DS",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios7.bin": "{url}/bios7.bin",
      "bios9.bin": "{url}/bios9.bin",
      "firmware.bin": "{url}/firmware.bin"
    }
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NDS_NOINTRO_URL"
        ],
        "match": "(?P<machine>[^/]+).zip"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Nintendo - Nintendo DS (Decrypted) (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Nintendo - Nintendo DS \\(Decrypted\\).*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}",
          "target": "$HOME/RetroPie/roms/nds/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/nds/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/nds", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
