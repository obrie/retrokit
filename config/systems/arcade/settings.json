{
  "system": "arcade",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-MAME",
        "path": "retroarch/overlay/ArcadeBezels"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-MAME",
        "path": "retroarch/overlay/ArcadeBezels",
        "default": "retroarch/overlay/MAME-Horizontal.png",
        "vertical": "retroarch/overlay/MAME-Vertical.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper", "arcadedb"]
  },
  "emulators": {
    "lr-fbneo": {"default": true, "core_name": "fbneo", "library_name": "FinalBurn Neo"},
    "lr-mame2003": {"core_name": "mame2003", "library_name": "MAME 2003 (0.78)"},
    "lr-mame2003-plus": {"core_name": "mame2003-plus", "library_name": "MAME 2003-Plus"},
    "lr-mame2010": {"core_name": "mame2010", "library_name": "MAME 2010"},
    "lr-mame2015": {"core_name": "mame2015", "library_name": "MAME 2015"},
    "lr-mame2016": {"core_name": "mame2016", "library_name": "MAME 2016"},
    "advmame-joy": {"aliases": ["advmame"]},
    "lr-mame0222": {"aliases": ["lr-mame"], "core_name": "mame_", "library_name": "MAME"}
  },
  "romsets": [
    {
      "name": "fbneo",
      "protocol": "http",
      "url": "$ROMSET_MAME_FBNEO_URL",
      "resources": {
        "dat": {
          "source": "https://github.com/libretro/FBNeo/raw/master/dats/FinalBurn Neo (ClrMame Pro XML, Arcade only).dat",
          "target": "/opt/retropie/libretrocores/lr-fbneo/dats/FinalBurn Neo (ClrMame Pro XML, Arcade only).dat"
        },
        "machine": {
          "source": "{url}/roms/arcade.zip/arcade%2F{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.fbneo/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "sample": {
          "source": "{url}/support/samples.zip/samples%2F{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/fbneo/samples/{sample}.zip"
        }
      },
      "emulator": "lr-fbneo"
    },
    {
      "name": "mame2003",
      "protocol": "http",
      "url": "$ROMSET_MAME_2003_URL",
      "resources": {
        "dat": {
          "source": "{url}/mame2003.xml",
          "target": "$HOME/retrokit/tmp/arcade/mame2003.dat"
        },
        "machine": {
          "source": "{url}/roms/{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.mame2003/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "{url}/roms/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.mame2003/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "{url}/samples/{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame2003/samples/{sample}.zip"
        }
      },
      "emulator": "lr-mame2003"
    },
    {
      "name": "mame2003-plus",
      "protocol": "http",
      "url": "$ROMSET_MAME_2003_PLUS_URL",
      "resources": {
        "dat": {
          "source": "{url}/MAME 2003-Plus - 2018-12-31.xml",
          "target": "$HOME/retrokit/tmp/arcade/mame2003-plus.dat"
        },
        "machine": {
          "source": "{url}/roms/{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.mame2003-plus/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "{url}/roms/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.mame2003-plus/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "{url}/samples/{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame2003-plus/samples/{sample}.zip"
        }
      },
      "emulator": "lr-mame2003-plus"
    },
    {
      "name": "mame2010",
      "protocol": "http",
      "url": "$ROMSET_MAME_2010_URL",
      "resources": {
        "dat": {
          "source": "{url}/MAME 2010 DAT - 2019-01-05.xml",
          "target": "$HOME/retrokit/tmp/arcade/mame2010.dat"
        },
        "machine": {
          "source": "{url}/roms.zip/roms%2F{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.mame2010/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "$ROMSET_MAME_2010_EXTRAS_URL/roms/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.mame2010/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "{url}/samples/{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame2010/samples/{sample}.zip"
        }
      },
      "emulator": "lr-mame2010"
    },
    {
      "name": "mame2015",
      "protocol": "http",
      "url": "$ROMSET_MAME_2015_URL",
      "resources": {
        "dat": {
          "source": "{url}/mame2015.xml",
          "target": "$HOME/retrokit/tmp/arcade/mame2015.dat"
        },
        "machine": {
          "source": "{url}/roms.zip/roms%2F{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.mame2015/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "$ROMSET_MAME_2010_EXTRAS_URL/roms/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.mame2015/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "{url}/samples/{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame2015/samples/{sample}.zip"
        }
      },
      "emulator": "lr-mame2015"
    },
    {
      "name": "mame2016",
      "protocol": "http",
      "url": "$ROMSET_MAME_2016_URL",
      "resources": {
        "dat": {
          "source": "{url}/MAME 2016 XML (Arcade Only).xml",
          "target": "$HOME/retrokit/tmp/arcade/mame2016.dat"
        },
        "machine": {
          "source": "{url}/roms.zip/roms%2F{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.mame2016/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "$ROMSET_MAME_2010_EXTRAS_URL/roms/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.mame2016/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "{url}/samples/{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame2016/samples/{sample}.zip"
        }
      },
      "emulator": "lr-mame2016"
    },
    {
      "name": "mame-0222",
      "protocol": "http",
      "url": "$ROMSET_MAME_0222_URL",
      "resources": {
        "dat": {
          "source": "https://archive.org/download/mame-mame0222/mame0222lx.zip/mame0222.xml",
          "target": "$HOME/retrokit/tmp/arcade/mame.dat"
        },
        "machine": {
          "source": "{url}/{parent}.zip",
          "download": "$HOME/RetroPie/roms/arcade/.mame/{parent}.merged.zip",
          "target": "$HOME/RetroPie/roms/arcade/.mame/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "$ROMSET_MAME_0223_URL/Arcade/chd/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.mame/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "$ROMSET_MAME_0223_URL/Arcade/samples.zip/samples%2F{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame/samples/{sample}.zip"
        }
      },
      "emulator": "lr-mame"
    },
    {
      "name": "advmame",
      "protocol": "http",
      "url": "$ROMSET_MAME_2010_URL",
      "resources": {
        "dat": {
          "source": "https://www.progettosnaps.net/download/?tipo=dat_mame&file=/dats/MAME/packs/MAME_Dats_106.7z",
          "download": "$HOME/retrokit/tmp/arcade/advmame.7z",
          "target": "$HOME/retrokit/tmp/arcade/advmame.dat",
          "install": {"action": "7z_extract", "file": ".*\\.xml"}
        },
        "machine": {
          "source": "{url}/roms.zip/roms%2F{machine}.zip",
          "target": "$HOME/RetroPie/roms/arcade/.advmame/{machine}.zip",
          "install": {"action": "zip_merge"}
        },
        "disk": {
          "source": "$ROMSET_MAME_2010_EXTRAS_URL/roms/{machine}/{disk}.chd",
          "target": "$HOME/RetroPie/roms/arcade/.advmame/{machine}/{disk}.chd",
          "xref": "$HOME/RetroPie/roms/arcade/.chd/{machine}/{disk}-{sha1}.chd"
        },
        "sample": {
          "source": "{url}/samples/{sample}.zip",
          "target": "$HOME/RetroPie/BIOS/mame-advmame/samples/{sample}.zip"
        }
      },
      "emulator": "advmame"
    }
  ],
  "metadata": {
    "language": {
      "source": "https://www.progettosnaps.net/download/?tipo=languages&file=pS_Languages_{version}.zip",
      "download": "$HOME/retrokit/tmp/arcade/languages.zip",
      "target": "$HOME/retrokit/tmp/arcade/languages.ini",
      "install": {"action": "zip_extract", "file": "folders/languages\\.ini"}
    },
    "genre": {
      "source": "https://www.progettosnaps.net/download/?tipo=catver&file=pS_CatVer_{version}.zip",
      "download": "$HOME/retrokit/tmp/arcade/catver.zip",
      "target": "$HOME/retrokit/tmp/arcade/catver.ini",
      "install": {"action": "zip_extract", "file": "UI_files/catlist\\.ini"}
    },
    "rating": {
      "source": "https://www.progettosnaps.net/download/?tipo=bestgames&file=pS_BestGames_{version}.zip",
      "download": "$HOME/retrokit/tmp/arcade/bestgames.zip",
      "target": "$HOME/retrokit/tmp/arcade/bestgames.ini",
      "install": {"action": "zip_extract", "file": "folders/bestgames\\.ini"}
    },
    "emulator": {
      "source": "https://docs.google.com/spreadsheets/d/1Rq4shU1RUSdcc7cTVWeORMD-mcO6BwXwQ7TGw8f5_zw/export?gid=0&format=tsv",
      "target": "$HOME/retrokit/config/systems/arcade/emulators.tsv"
    },
    "manual": {
      "source": "file://$HOME/retrokit/config/systems/arcade/manuals.tsv"
    }
  },
  "roms": {
    "id": "name",
    "priority": {
      "flags": [
        "USA"
      ]
    },
    "filters": {
      "emulator_compatibility": [true],
      "emulator_ratings": [5],
      "clones": [false],
      "languages": [
        null,
        "English"
      ],
      "!genres": [
        "Board Game",
        "Casino",
        "Golf",
        "Mature",
        "Medal Game",
        "Multiplay",
        "MultiGame / Compilation",
        "Music Game",
        "Puzzle / Match",
        "Quiz",
        "Slot Machine",
        "Sports / Baseball",
        "Sports / Bowling",
        "Sports / Handball",
        "Sports / Hang Gliding",
        "Sports / Hockey",
        "Sports / Horse Racing",
        "Sports / Misc.",
        "Sports / Pool",
        "Sports / Shuffleboard",
        "Sports / Soccer",
        "Sports / Swimming",
        "Sports / Tennis",
        "Sports / Volleyball",
        "Tabletop"
      ],
      "!ratings": [
        "0 to 10 (Worst)",
        "10 to 20 (Horrible)",
        "20 to 30 (Bad)",
        "30 to 40 (Amendable)"
      ],
      "!flags": [
        "Hack",
        "Demo"
      ],
      "!keywords": [
        "Anniversary",
        "Bootleg",
        "DECO Cassette",
        "HB,",
        "Homebrew",
        "Prototype"
      ],
      "!controls": [
        "Gambling",
        "Hanafuda",
        "Mahjong",
        "Trackball"
      ],
      "!names": [
        "47pie2",
        "bjtwin",
        "canvas",
        "deluxe5"
      ],
      "+names": [
        "jdredd",
        "pacman"
      ],
      "demo": [
        "area51",
        "asteroid",
        "excitebk",
        "f1en",
        "invaders",
        "pacman",
        "tekken"
      ]
    },
    "favorites": {
      "names": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/arcade", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"},
      "disk": {"source": "{target_path}/..", "target": "{dir}/{machine}"}
    }
  }
}
