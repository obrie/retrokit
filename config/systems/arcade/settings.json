      "name": "mame-0222",
      "protocol": "http",
      "url": "$ROMSET_MAME_0222_URL",
      "resources": {
        "dat": {
          "source": "https://archive.org/download/mame-mame0222/mame0222lx.zip/mame0222.xml",
          "target": "$HOME/retrokit/tmp/arcade/mame0222.dat"
        },
        "machine": {
          "source": "{url}/{parent}.zip",
