        "$HOME/RetroPie/roms/arcade/mame2010/cfg/default.cfg",
        "$HOME/RetroPie/roms/arcade/mame2010/cfg/{rom}.cfg",
        "$HOME/RetroPie/roms/arcade/mame2010/diff/{rom}.df",
        "$HOME/RetroPie/roms/arcade/mame2010/hi/{rom}.hi",
