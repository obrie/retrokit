{
  "system": "pcengine",
  "metadata": {
    "path": "$RETROKIT_HOME/data/pcengine.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-PCEngine/raw/master/retroarch/overlay/NEC-PC-Engine.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-PCEngine",
        "path": "retroarch/overlay/GameBezels/PCEngine"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-PCEngine",
        "path": "retroarch/overlay/GameBezels/PCEngine"
      }
    ]
  },
  "emulators": {
    "lr-beetle-pce-fast": {
      "default": true,
      "core_name": "pce",
      "library_name": "Beetle PCE Fast"
    }
  },
  "cheats": {
    "names": [
      "NEC - PC Engine - TurboGrafx 16"
    ]
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL/no-intro_romsets_files.xml"
        ],
        "match": "no-intro romsets/NEC - PC Engine - TurboGrafx 16"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/NEC - PC Engine - TurboGrafx 16 (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/NEC - PC Engine - TurboGrafx 16.*\\.dat", "overwrite_target": true}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/pcengine/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/pcengine/.nointro/.xrefs/{machine_id}.zip",
          "file_identifier": "name"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/pcengine", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
