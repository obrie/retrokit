{
  "system": "ngpc",
  "metadata": {
    "path": "$RETROKIT_HOME/data/ngpc.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-NGPC/raw/master/retroarch/overlay/SNK-Neo-Geo-Pocket-Color.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-NGPC",
        "path": "retroarch/overlay/GameBezels/NGP"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-NGPC",
        "path": "retroarch/overlay/GameBezels/NGP"
      }
    ]
  },
  "emulators": {
    "lr-beetle-ngp": {
      "default": true,
      "core_name": "ngp",
      "library_name": "Beetle NeoPop",
      "gamestate": [
        "{rom_dir}/{rom}.zip#{rom}.flash"
      ]
    }
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "SNK - Neo Geo Pocket Color"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/SNK - Neo Geo Pocket Color (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/SNK - Neo Geo Pocket Color.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/ngpc/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/ngpc/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/ngpc", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
