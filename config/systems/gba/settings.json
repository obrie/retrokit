{
  "system": "gba",
  "metadata": {
    "path": "$RETROKIT_HOME/data/gba.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-GBA/raw/master/retroarch/overlay/Nintendo-Game-Boy-Advance.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GBA",
        "path": "retroarch/overlay/GameBezels/GBA"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-GBA",
        "path": "retroarch/overlay/GameBezels/GBA"
      }
    ]
  },
  "emulators": {
    "lr-mgba": {
      "default": true,
      "core_name": "mgba",
      "library_name": "mGBA"
    }
  },
  "cheats": {
    "names": [
      "Nintendo - Game Boy Advance"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo - Game Boy Advance",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "gba_bios.bin": "{url}/gba_bios.bin"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Nintendo - Game Boy Advance \\([0-9]"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Nintendo - Game Boy Advance (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Nintendo - Game Boy Advance \\(Parent.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gba/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/gba/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": {
        "type": "internetarchive"
      }
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/gba", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
