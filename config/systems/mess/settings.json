{
  "system": "mess",
  "metadata": {
    "path": "$RETROKIT_HOME/data/mess.json"
  },
  "scraper": {
    "sources": ["arcadedb", "screenscraper"],
    "import_dat_titles": false,
    "args": [
      "-p", "mame-libretro",
      "-i", "$HOME/RetroPie/roms/mess",
      "-g", "$HOME/.emulationstation/gamelists/mess",
      "-o", "$HOME/.emulationstation/downloaded_media/mess",
      "-d", "cache/mess"
    ]
  },
  "emulators": {
    "lr-mess": {},
    "lr-mess-common": {
      "default": true,
      "names": ["lr-mess-mame"],
      "build": "source",
      "core_name": "mame",
      "library_name": "MAME",
      "gamestate": [
        "$HOME/RetroPie/roms/mess/mame/diff/{rom}.df",
        "$HOME/RetroPie/roms/mess/mame/hi/{rom}.hi",
        "$HOME/RetroPie/roms/mess/mame/nvram/{rom}"
      ]
    }
  },
  "romsets": {
    "mame": {
      "protocol": "http",
      "url": "$ROMSET_MAME_LATEST_URL",
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/cache/mame/MAME Latest (Home).dat"
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/mess/.mame/{machine}.zip",
          "install": {"action": "zip_merge"}
        }
      }
    }
  },
  "roms": {
    "id": "name",
    "priority": {
    },
    "filters": {
      "tags": [
        "Tiger Electronics LCD"
      ]
    },
    "favorites": {
    },
    "dirs": [
      {
        "path": "$HOME/RetroPie/roms/mess/Tiger Electronics",
        "filters": {
          "tags": ["Tiger Electronics LCD"]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
