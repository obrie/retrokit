{
  "system": "mess",
  "metadata": {
    "path": "$HOME/retrokit/data/mess.json"
  },
  "themes": {
    "launch_image": "https://github.com/TMNTturtleguy/ComicBook-Theme-Launch-Images-for-Retropie/raw/master/16x9-Launching_ComicRip/mame/launching.png"
  },
  "scraper": {
    "sources": ["arcadedb", "screenscraper"],
    "import_dat_titles": false,
    "args": [
      "-p", "mame-libretro",
      "-i", "$HOME/RetroPie/roms/mess",
      "-g", "$HOME/.emulationstation/gamelists/mess",
      "-o", "$HOME/.emulationstation/downloaded_media/mess",
      "-d", "cache/mess"
    ]
  },
  "emulators": {
    "lr-mess": {},
    "lr-mess-common": {
      "default": true,
      "names": ["lr-mess-mame"],
      "build": "source",
      "core_name": "mame",
      "library_name": "MAME",
      "gamestate": [
        "$HOME/RetroPie/roms/mess/mame/diff/{rom}.df",
        "$HOME/RetroPie/roms/mess/mame/hi/{rom}.hi",
        "$HOME/RetroPie/roms/mess/mame/nvram/{rom}"
      ]
    }
  },
  "romsets": [
    {
      "name": "mame",
      "protocol": "http",
      "url": "$ROMSET_MAME_0245_URL",
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/mame/MAME 0.244.7z",
          "target": "$HOME/retrokit/tmp/mame/mame0244-home.dat",
          "install": {"action": "7z_extract", "file": ".*\\(Home\\)\\.dat"}
        },
        "machine": {
          "source": "{url}/MAME%200.245%20ROMs%20%28split%29/{machine}.zip",
          "target": "$HOME/RetroPie/roms/mess/.mame/{machine}.zip",
          "install": {"action": "zip_merge"}
        }
      }
    }
  ],
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
      "tags": [
        "Tiger Electronics LCD"
      ]
    },
    "favorites": {
    },
    "dirs": [
      {
        "path": "$HOME/RetroPie/roms/mess/Tiger Electronics",
        "filters": {
          "tags": ["Tiger Electronics LCD"]
        }
      }
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
