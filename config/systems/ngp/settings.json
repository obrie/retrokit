{
  "system": "ngp",
  "metadata": {
    "path": "$HOME/retrokit/data/ngp.json"
  },
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-NGP",
        "path": "retroarch/overlay/GameBezels/NGP"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-NGP",
        "path": "retroarch/overlay/GameBezels/NGP",
        "default": "retroarch/overlay/SNK-Neo-Geo-Pocket.png"
      }
    ]
  },
  "emulators": {
    "lr-beetle-ngp": {
      "default": true,
      "core_name": "ngp",
      "library_name": "Beetle NeoPop",
      "gamestate": [
        "{rom_dir}/{rom}.zip#{rom}.flash"
      ]
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL/no-intro_romsets_files.xml"
        ],
        "match": "no-intro romsets/SNK - Neo Geo Pocket \\("
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/SNK - Neo Geo Pocket (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/ngp/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/ngp/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/ngp", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
