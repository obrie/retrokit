{
  "system": "atarilynx",
  "metadata": {
    "path": "$RETROKIT_HOME/data/atarilynx.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-AtariLynx/raw/master/retroarch/overlay/Atari-Lynx-Horizontal.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-AtariLynx",
        "path": "retroarch/overlay/GameBezels/AtariLynx"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-AtariLynx",
        "path": "retroarch/overlay/GameBezels/AtariLynx"
      }
    ]
  },
  "emulators": {
    "lr-handy": {
      "default": true,
      "core_name": "handy",
      "library_name": "Handy"
    }
  },
  "cheats": {
    "names": [
      "Atari - Lynx"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Atari - Lynx",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "lynxboot.img": "{url}/lynxboot.img"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Atari - Lynx"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Atari - Lynx (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Atari - Lynx.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/atarilynx/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/atarilynx/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": {
        "type": "internetarchive"
      }
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/atarilynx", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
