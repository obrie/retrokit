{
  "system": "videopac",
  "metadata": {
    "path": "$RETROKIT_HOME/data/videopac.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-Videopac/raw/master/retroarch/overlay/Magnavox-Odyssey-2.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Videopac",
        "path": "retroarch/overlay/GameBezels/Videopac"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-Videopac",
        "path": "retroarch/overlay/GameBezels/Videopac"
      }
    ]
  },
  "emulators": {
    "lr-o2em": {
      "default": true,
      "core_name": "o2em",
      "library_name": "O2EM"
    }
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Magnavox - Odyssey2",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "o2rom.bin": "{url}/o2rom.bin"
    }
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Magnavox - Odyssey2"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Magnavox - Odyssey2 (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Magnavox - Odyssey 2.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/videopac/.nointro/{machine}.zip",
          "target": "$HOME/RetroPie/roms/videopac/.nointro/{machine}.bin",
          "xref": "$HOME/RetroPie/roms/videopac/.nointro/.xrefs/{machine_id}.bin",
          "install": {"action": "zip_extract", "file": ".*\\.bin"}
        }
      },
      "auth": "internetarchive"
    },
    "nointro-plus": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Philips - Videopac+"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Philips - Videopac+ (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Philips - Videopac\\+.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/videopac/.nointro-plus/{machine}.zip",
          "target": "$HOME/RetroPie/roms/videopac/.nointro-plus/{machine}.bin",
          "xref": "$HOME/RetroPie/roms/videopac/.nointro-plus/.xrefs/{machine_id}.bin",
          "install": {"action": "zip_extract", "file": ".*\\.bin"}
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/videopac", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
