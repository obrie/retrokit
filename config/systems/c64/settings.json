{
  "system": "c64",
  "metadata": {
    "path": "$RETROKIT_HOME/data/c64.json"
  },
  "scraper": {
    "args": ["--includepattern", "*.zip"]
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-C64/raw/master/retroarch/overlay/Commodore-64.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-C64",
        "path": "retroarch/overlay/GameBezels/C64"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-C64",
        "path": "retroarch/overlay/GameBezels/C64"
      }
    ]
  },
  "emulators": {
    "lr-vice": {
      "default": true,
      "core_name": "vice",
      "library_name": "VICE x64",
      "gamestate": [
        "{rom_dir}/{rom}.nvr",
        "{rom_dir}/vice_printer.txt",
        "{rom_dir}/vice_work",
        "{rom_dir}/vice_work.*"
      ]
    }
  },
  "romsets": {
    "nointro-carts": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": "Commodore - Commodore 64 \\([0-9-]+\\)"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Commodore - Commodore 64 (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Commodore - Commodore 64 \\(Parent.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/c64/.nointro-carts/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/c64/.nointro-carts/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    },
    "nointro-tapes": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": "Commodore - 64 \\(Tapes\\)"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Commodore - Commodore 64 (Tapes) (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Commodore - Commodore 64 \\(Tapes.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/c64/.nointro-tapes/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/c64/.nointro-tapes/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    },
    "nointro-pp": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": "Commodore - 64 \\(PP\\)"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Commodore - Commodore 64 (PP) (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Commodore - Commodore 64 \\(PP.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/c64/.nointro-pp/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/c64/.nointro-pp/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/c64", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
