{
  "system": "mastersystem",
  "metadata": {
    "path": "$RETROKIT_HOME/data/mastersystem.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-MasterSystem/raw/master/retroarch/overlay/Sega-Master-System.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelprojectSA-MasterSystem",
        "path": "retroarch/overlay/GameBezels/MasterSystem"
      }
    ]
  },
  "emulators": {
    "lr-genesis-plus-gx": {
      "default": true,
      "core_name": "genesis_plus_gx",
      "library_name": "Genesis Plus GX"
    }
  },
  "cheats": {
    "names": [
      "Sega - Master System - Mark III"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Sega - Master System - Mark III",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_E.sms": "{url}/bios_E.sms",
      "bios_J.sms": "{url}/bios_J.sms",
      "bios_U.sms": "{url}/bios_U.sms"
    }
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Sega - Master System - Mark III"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sega - Master System - Mark III (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sega - Master System - Mark III.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/mastersystem/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/mastersystem/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/mastersystem", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}