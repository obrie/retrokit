{
  "scraper": {
    "sources": ["screenscraper"],
    "import_dat_titles": true,
    "args": [],
    "gamelist_args": ["--flags", "skipexistingcovers,skipexistingmarquees,skipexistingscreenshots,skipexistingvideos,skipexistingwheels"],
    "gamelist_include_base_args": true
  },
  "metadata": {
    "manuals": {
      "languages": {
        "allowlist": [
          "en",
          "en-gb"
        ],
        "prioritize_region_languages": false,
        "only_region_languages": false
      }
    },
    "parents": {
      "autodetect": false
    }
  },
  "retroarch": {
    "gamestate": [
      "{rom_dir}/{rom}.ldci",
      "{rom_dir}/{rom}.sav",
      "{rom_dir}/{rom}.srm",
      "{rom_dir}/{rom}.state"
    ]
  },
  "mess": {
    "artwork": {
      "background_only": true
    }
  },
  "roms": {
    "filters": {
      "!keywords": [
        "BIOS"
      ]
    },
    "collections": [
      {
        "name": "Keyboard",
        "filters": {
          "tags": ["keyboard"]
        }
      },
      {
        "name": "Lightguns",
        "filters": {
          "tags": ["lightgun"]
        }
      },
      {
        "name": "Multitap",
        "filters": {
          "tags": ["multitap"]
        }
      },
      {
        "name": "Trackball",
        "filters": {
          "tags": ["trackball"]
        }
      },
      {
        "name": "Manuals",
        "filters": {
          "manuals": [true]
        }
      },
      {
        "name": "Multiplayer",
        "filters": {
          "!players": [null, 1]
        }
      },
      {
        "name": "Multiplayer: 4+",
        "filters": {
          "!players": [null, 1, 2, 3]
        }
      }
    ]
  }
}
