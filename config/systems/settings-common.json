{
  "scraper": {
    "sources": ["screenscraper"],
    "import_dat_titles": true,
    "args": [],
    "gamelist_args": ["--flags", "skipexistingcovers,skipexistingmarquees,skipexistingscreenshots,skipexistingvideos,skipexistingwheels"],
    "gamelist_include_base_args": true
  },
  "metadata": {
    "manuals": {
      "languages": {
        "allowlist": [],
        "prioritize_region_languages": true,
        "only_region_languages": false
      }
    }
  },
  "retroarch": {
    "gamestate": [
      "{rom_dir}/{rom}.ldci",
      "{rom_dir}/{rom}.sav",
      "{rom_dir}/{rom}.srm",
      "{rom_dir}/{rom}.state"
    ]
  },
  "mess": {
    "artwork": {
      "background_only": true
    }
  },
  "roms": {
    "filters": {
      "runnable": [true]
    },
    "collections": {
      "C64 Dreams: Best Of": {
        "filters": {
          "tags": ["C64 Dreams: Best Of"]
        }
      },
      "Keyboard": {
        "filters": {
          "controls": ["keyboard"]
        }
      },
      "Lightguns": {
        "filters": {
          "controls": ["lightgun"]
        }
      },
      "Multitap": {
        "filters": {
          "peripherals": ["multitap"]
        }
      },
      "Trackball": {
        "filters": {
          "controls": ["trackball"],
          "!controls": ["lightgun"]
        }
      },
      "Manuals": {
        "filters": {
          "manuals": [true]
        }
      },
      "Multiplayer": {
        "filters": {
          "!players": [null, 1]
        }
      },
      "Multiplayer: 4+": {
        "filters": {
          "!players": [null, 1, 2, 3]
        }
      },
      "Party: 4+": {
        "filters": {
          "tags": ["party"]
        }
      },
      "Kid-Friendly": {
        "filters": {
          "age_ratings": [
            "1",
            "3",
            "6",
            "7",
            "8",
            "9",
            "E",
            "EC",
            "KA"
          ]
        }
      }
    }
  }
}
