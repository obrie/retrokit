{
  "system": "sega32x",
  "metadata": {
    "path": "$RETROKIT_HOME/data/sega32x.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelproject-Sega32X/raw/master/retroarch/overlay/Sega-32X.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-Sega32X",
        "path": "retroarch/overlay/GameBezels/Sega32X"
      }
    ]
  },
  "emulators": {
    "lr-picodrive": {
      "default": true,
      "core_name": "picodrive",
      "library_name": "PicoDrive"
    }
  },
  "cheats": {
    "names": [
      "Sega - 32X"
    ]
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Sega - 32X"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sega - 32X (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sega - 32X.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/sega32x/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/sega32x/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/sega32x", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
