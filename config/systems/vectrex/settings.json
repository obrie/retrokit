{
  "system": "vectrex",
  "metadata": {
    "path": "$RETROKIT_HOME/data/vectrex.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-GCEVectrex/raw/master/retroarch/overlay/GCE-Vectrex.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GCEVectrex",
        "path": "retroarch/overlay/GameBezels/GCEVectrex"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-GCEVectrex",
        "path": "retroarch/overlay/GameBezels/GCEVectrex"
      }
    ]
  },
  "emulators": {
    "lr-vecx": {
      "default": true,
      "core_name": "vecx",
      "library_name": "VecX"
    }
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": "GCE - Vectrex"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/GCE - Vectrex (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/GCE - Vectrex.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/vectrex/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/vectrex/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/vectrex", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
