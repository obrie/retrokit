{
  "system": "pokemini",
  "metadata": {
    "path": "$RETROKIT_HOME/data/pokemini.json"
  },
  "emulators": {
    "lr-pokemini": {
      "default": true,
      "core_name": "pokemini",
      "library_name": "PokeMini"
    }
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo - Pokemon Mini",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios.min": "{url}/bios.min"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Nintendo - Pokemon Mini"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Nintendo - Pokemon Mini (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Nintendo - Pokemon Mini.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/pokemini/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/pokemini/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/pokemini", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
