{
  "system": "pokemini",
  "emulators": {
    "lr-pokemini": {
      "default": true,
      "core_name": "pokemini",
      "library_name": "PokeMini"
    }
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Nintendo - Pokemon Mini",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios.min": "{url}/bios.min"
    }
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL/no-intro_romsets_files.xml"
        ],
        "match": "no-intro romsets/Nintendo - Pokemon Mini"
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Nintendo - Pokemon Mini (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/pokemini/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/pokemini/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "metadata": {
    "manual": {
      "source": "file://$HOME/retrokit/config/systems/pokemini/manuals.tsv"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/data/pokemini.json"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/pokemini", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
