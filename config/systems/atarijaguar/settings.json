{
  "system": "atarijaguar",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-AtariJaguar",
        "path": "retroarch/overlay/GameBezels/AtariJaguar"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-AtariJaguar",
        "path": "retroarch/overlay/GameBezels/AtariJaguar",
        "default": "retroarch/overlay/Atari-Jaguar.png"
      }
    ]
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-mess": {},
    "lr-mess-jaguar": {"build": "source", "core_name": "mame", "library_name": "MAME"},
    "lr-virtualjaguar": {"core_name": "virtualjaguar", "library_name": "Virtual Jaguar", "default": true}
  },
  "romsets": [
    {
      "name": "nointro",
      "protocol": "http",
      "discovery": {
        "type": "nointro",
        "base": "$ROMSET_NOINTRO_URL",
        "metadata": "{base}/no-intro_romsets_files.xml",
        "paths": {
          "url": "no-intro romsets/Atari - Jaguar \\(J64\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$HOME/retrokit/cache/nointro/Atari - Jaguar (J64) (Parent-Clone).dat"
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/atarijaguar/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/atarijaguar/.nointro/.{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  ],
  "metadata": {
    "manual": {
      "source": "file://$HOME/retrokit/config/systems/atarijaguar/manuals.tsv"
    },
    "parent": {
      "source": "file://$HOME/retrokit/config/systems/atarijaguar/clones.json"
    },
    "emulator": {
      "source": "file://$HOME/retrokit/config/systems/atarijaguar/emulators.tsv"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/atarijaguar.json"
    }
  },
  "bios": {
    "url": "$ROMSET_MAME_0222_URL",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "jaguar.zip": "{url}/jaguar.zip"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
      "flags": [
        "USA",
        "World"
      ],
      "length": "ascending"
    },
    "filters": {
      "emulator_ratings": [
        4,
        5
      ],
      "flags": [
        "Europe",
        "USA",
        "World"
      ],
      "!flags": [
        "Beta",
        "Proto"
      ],
      "!keywords": [
        "BIOS"
      ],
      "demo": [
        "Atari Karts",
        "Double Dragon V - The Shadow Falls"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/atarijaguar", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
