{
  "system": "atarijaguar",
  "metadata": {
    "path": "$RETROKIT_HOME/data/atarijaguar.json",
    "defaults": {
      "emulation": {
        "rating": 0
      }
    }
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-AtariJaguar/raw/master/retroarch/overlay/Atari-Jaguar.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-AtariJaguar",
        "path": "retroarch/overlay/GameBezels/AtariJaguar"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-AtariJaguar",
        "path": "retroarch/overlay/GameBezels/AtariJaguar"
      }
    ]
  },
  "emulators": {
    "lr-mess": {},
    "lr-mess-atarijaguar": {
      "build": "source",
      "names": ["lr-mess-jaguar"],
      "core_name": "mame",
      "library_name": "MAME",
      "gamestate": [
        "$HOME/RetroPie/roms/atarijaguar/mame/diff/{rom}.df",
        "$HOME/RetroPie/roms/atarijaguar/mame/hi/{rom}.hi",
        "$HOME/RetroPie/roms/atarijaguar/mame/nvram/{rom}"
      ]
    },
    "lr-virtualjaguar": {
      "default": true,
      "core_name": "virtualjaguar",
      "library_name": "Virtual Jaguar",
      "gamestate": [
        "{rom_dir}/{rom}.cdrom.srm",
        "{rom_dir}/{rom}.zip#{rom}.srm",
        "{rom_dir}/{rom}.zip#{rom}.cdrom.srm"
      ]
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Atari - Jaguar \\(J64\\)"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Atari - Jaguar (J64) (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Atari - Jaguar \\(J64.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/atarijaguar/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/atarijaguar/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "bios": {
    "url": "$ROMSET_MAME_LATEST_URL",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "jaguar.zip": "{url}/jaguar.zip"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/atarijaguar", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
