{
  "system": "gamegear",
  "metadata": {
    "path": "$RETROKIT_HOME/data/gamegear.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-GameGear/raw/master/retroarch/overlay/Sega-Game-Gear.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-GameGear",
        "path": "retroarch/overlay/GameBezels/GameGear"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-GameGear",
        "path": "retroarch/overlay/GameBezels/GameGear"
      }
    ]
  },
  "emulators": {
    "lr-genesis-plus-gx": {
      "default": true,
      "core_name": "genesis_plus_gx",
      "library_name": "Genesis Plus GX"
    }
  },
  "cheats": {
    "names": [
      "Sega - Game Gear"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Sega - Game Gear",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios.gg": "{url}/bios.gg"
    }
  },
  "romsets": {
    "nointro": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": {
          "url": "Sega - Game Gear"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sega - Game Gear (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sega - Game Gear.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/gamegear/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/gamgear/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/gamegear", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}