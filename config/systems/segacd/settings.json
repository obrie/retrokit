{
  "system": "segacd",
  "overlays": {
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-SegaCD",
        "path": "retroarch/overlay/GameBezels/SegaCD"
      },
      {
        "repo": "thebezelproject/bezelprojectsa-SegaCD",
        "path": "retroarch/overlay/GameBezels/SegaCD",
        "default": "retroarch/overlay/Sega-CD.png"
      }
    ],
    "lightgun_border": {
      "offset_x": 223
    }
  },
  "scraper": {
    "sources": ["screenscraper"]
  },
  "emulators": {
    "lr-genesis-plus-gx": {"core_name": "genesis_plus_gx", "library_name": "Genesis Plus GX", "default": true}
  },
  "playlists": {
    "enabled": true
  },
  "cheats": {
    "names": [
      "Sega - Mega-CD - Sega CD"
    ]
  },
  "bios": {
    "url": "$BIOS_URL/libretro/Sega - Mega CD - Sega CD",
    "dir": "$HOME/RetroPie/BIOS",
    "files": {
      "bios_CD_E.bin": "{url}/bios_CD_E.bin",
      "bios_CD_J.bin": "{url}/bios_CD_J.bin",
      "bios_CD_U.bin": "{url}/bios_CD_U.bin"
    }
  },
  "romsets": [
    {
      "name": "redump",
      "protocol": "http",
      "url": "$ROMSET_SEGACD_REDUMP_URL",
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/mcd/",
          "download": "$HOME/retrokit/tmp/segacd/roms.zip",
          "target": "$HOME/retrokit/cache/redump/Sega - Mega CD & Sega CD.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{url}/{machine}.zip",
          "download": "$HOME/RetroPie/roms/segacd/.redump/{machine_id}.zip",
          "target": "$HOME/RetroPie/roms/segacd/.redump/{machine_id}.chd",
          "install": {"action": "zip_to_chd"}
        }
      }
    }
  ],
  "metadata": {
    "parent": {
      "source": "file://$HOME/retrokit/config/systems/segacd/clones.json"
    },
    "manual": {
      "source": "file://$HOME/retrokit/config/systems/segacd/manuals.tsv"
    },
    "scraper": {
      "source": "file://$HOME/retrokit/cache/scraper/segacd.json"
    }
  },
  "manuals": {
    "source": "https://archive.org/download/SEGACDManuals/{machine}.pdf",
    "target": "$HOME/.emulationstation/downloaded_media/segacd/manuals/{machine}.pdf"
  },
  "roms": {
    "id": "crc",
    "priority": {
      "flags": [
        "USA",
        "Europe"
      ],
      "length": "ascending"
    },
    "filters": {
      "flags": [
        "Australia",
        "Europe",
        "USA"
      ],
      "!flags": [
        "Beta",
        "Demo",
        "Proto",
        "Unl"
      ],
      "categories": [
        "Games"
      ],
      "!genres": [
        null,
        "Board game",
        "Casino",
        "Compilation",
        "Educational"
      ],
      "+titles": [
        "Mary Shelley's Frankenstein",
        "Wheel of Fortune"
      ],
      "demo": [
        "WWF - Rage in the Cage"
      ]
    },
    "favorites": {
      "titles": [
      ]
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/segacd", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}