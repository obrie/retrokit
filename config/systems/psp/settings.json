{
  "system": "psp",
  "metadata": {
    "path": "$RETROKIT_HOME/data/psp.json"
  },
  "emulators": {
    "ppsspp": {
      "default": true,
      "gamestate": [
        "/opt/retropie/configs/psp/PSP/SAVEDATA/*",
        "/opt/retropie/configs/psp/PSP/PPSSPP_STATE/*"
      ]
    }
  },
  "romsets": {
    "redump": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_PSP_REDUMP_URL",
          "$ROMSET_PSP_REDUMP_URL.p2"
        ],
        "match": {
          "url": "(?P<machine>[^/]+)\\.zip"
        }
      },
      "resources": {
        "dat": {
          "source": "http://redump.org/datfile/psp/",
          "download": "$RETROKIT_HOME/tmp/psp/roms.zip",
          "target": "$RETROKIT_HOME/cache/redump/Sony - PlayStation Portable.dat",
          "install": {"action": "zip_extract", "file": ".*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}",
          "download": "$HOME/RetroPie/roms/psp/.redump/{machine}.zip",
          "target": "$HOME/RetroPie/roms/psp/.redump/{machine}.cso",
          "xref": "$HOME/RetroPie/roms/psp/.redump/.xrefs/{machine_id}.cso",
          "install": {"action": "zip_to_cso"}
        }
      }
    },
    "psn": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_PSP_PSN_URL"
        ],
        "match": {
          "url": "(?P<machine>[^/]+)\\.iso"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sony - PlayStation Portable (PSN) (Decrypted) (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sony - PlayStation Portable \\(PSN\\).*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}",
          "download": "$HOME/RetroPie/roms/psp/.psn/{machine}.iso",
          "target": "$HOME/RetroPie/roms/psp/.psn/{machine}.cso",
          "xref": "$HOME/RetroPie/roms/psp/.psn/.xrefs/{machine_id}.cso",
          "install": {"action": "iso_to_cso"}
        }
      },
      "filters": {
        "!flags": [
          "DLC"
        ]
      }
    },
    "dlc": {
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_PSP_DLC_URL"
        ],
        "match": {
          "url": "(?P<machine>[^/]+)\\.zip"
        }
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Sony - PlayStation Portable (PSN) (Decrypted) (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Sony - PlayStation Portable \\(PSN\\).*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}",
          "download": "$HOME/RetroPie/roms/psp/.dlc/{machine}.zip",
          "target": "$HOME/RetroPie/roms/psp/.dlc/{rom_root}",
          "install": {"action": "zip_extract", "include_parent": false}
        }
      },
      "filters": {
        "flags": [
          "DLC"
        ]
      }
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/psp", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
