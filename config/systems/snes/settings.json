{
  "system": "snes",
  "metadata": {
    "path": "$RETROKIT_HOME/data/snes.json"
  },
  "overlays": {
    "default": "https://github.com/thebezelproject/bezelprojectSA-SNES/raw/master/retroarch/overlay/Super-Nintendo-Entertainment-System.png",
    "repos": [
      {
        "repo": "thebezelproject/bezelproject-SNES",
        "path": "retroarch/overlay/GameBezels/SNES"
      },
      {
        "repo": "thebezelproject/bezelprojectSA-SNES",
        "path": "retroarch/overlay/GameBezels/SNES"
      }
    ],
    "lightgun_border": {
      "#offset_x": 223
    }
  },
  "emulators": {
    "lr-snes9x": {
      "default": true,
      "core_name": "snes9x",
      "library_name": "Snes9x"
    }
  },
  "cheats": {
    "names": [
      "Nintendo - Super Nintendo Entertainment System"
    ]
  },
  "romsets": {
    "nointro": {
      "protocol": "http",
      "discovery": {
        "type": "internetarchive",
        "urls": [
          "$ROMSET_NOINTRO_URL"
        ],
        "match": "Nintendo - Super Nintendo Entertainment System \\([0-9]"
      },
      "resources": {
        "dat": {
          "source": "file://$RETROKIT_HOME/tmp/No-Intro Love Pack (PC XML).zip",
          "target": "$RETROKIT_HOME/cache/nointro/Nintendo - Super Nintendo Entertainment System (Parent-Clone).dat",
          "install": {"action": "zip_extract", "file": ".*/Nintendo - Super Nintendo Entertainment System.*\\.dat"}
        },
        "machine": {
          "source": "{discovery_url}/{machine}.zip",
          "target": "$HOME/RetroPie/roms/snes/.nointro/{machine}.zip",
          "xref": "$HOME/RetroPie/roms/snes/.nointro/.xrefs/{machine_id}.zip"
        }
      },
      "auth": "internetarchive"
    }
  },
  "roms": {
    "id": "crc",
    "priority": {
    },
    "filters": {
    },
    "favorites": {
    },
    "dirs": [
      {"path": "$HOME/RetroPie/roms/snes", "filters": {}}
    ],
    "files": {
      "machine": {"target": "{dir}/{machine_filename}"}
    }
  }
}
