{
  "splashscreen": "https://github.com/obrie/retrokit/releases/download/latest/joshua_rancel-retro_history.mp4",
  "themes": {
    "library": [
      {
        "name": "pixel-metadata",
        "repo": "ehettervik",
        "launch_images_base_url": "https://raw.githubusercontent.com/TMNTturtleguy/ComicBook-Theme-Launch-Images-for-Retropie/master/16x9-Launching_ComicRip/{platform}/launching.png",
        "#launch_images_base_url": "https://raw.githubusercontent.com/ehettervik/es-runcommand-splash/master/{platform}/launching.png"
      }
    ],
    "launch_theme": "pixel-metadata"
  },
  "overlays": {
    "lightgun_border": {
      "enabled": true,
      "width": 24,
      "color": "#ffffff"
    }
  },
  "manuals": {
    "archive": {
      "url": "https://archive.org/download/retrokit-manuals/{system}/{system}-compressed.zip/{parent_title} ({languages}).pdf",
      "processed": true
    },
    "paths": {
      "base": "$HOME/.emulationstation/downloaded_media/{system}/manuals",
      "archive": "{base}/.download/{parent_title} ({languages}) (archive).pdf",
      "download": "{base}/.download/{parent_title} ({languages}).{extension}",
      "postprocess": "{base}/.files/{parent_title} ({languages}).pdf",
      "install": "{base}/{name}.pdf"
    },
    "postprocess": {
      "clean": {
        "enabled": true
      },
      "ocr": {
        "enabled": true
      },
      "compress": {
        "enabled": true,
        "color": {
          "icc": false
        },
        "downsample": {
          "enabled": true,
          "threshold": 1.05,
          "width": 1920,
          "height": 1440,
          "min_resolution": 72,
          "max_resolution": 300
        },
        "quality_factor": {
          "highres_color": 0.9,
          "highres_gray": 0.9,
          "highres_threshold": 0.66,
          "lowres_color": 0.4,
          "lowres_gray": 0.76,
          "pass_through_jpeg": false
        },
        "encode": {
          "uncompressed": true,
          "jpeg2000": true
        },
        "filesize": {
          "minimum_bytes_threshold": 0,
          "reduction_percent_threshold": 0.1
        }
      }
    },
    "keep_downloads": true
  },
  "retropie": {
    "show_menu": false
  },
  "hardware": {
    "case": {
      "model": "argon1"
    },
    "controllers": {
      "inputs": [
        {"name": "Keyboard"},
        {"name": "8Bitdo Arcade Stick", "id": "030000005e0400008e02000014010000"},
        {"name": "8Bitdo SN30 Pro", "id": "05000000c82d00000161000000010000", "swap_buttons": true}
      ],
      "hotkey": "select",
      "autoconfig": [
        "advmame",
        "drastic",
        "ir",
        "ppsspp",
        "redream",
        "retrokit-mupen64plus",
        "retrokit-kiosk"
      ]
    },
    "ir": {
      "gpio_pin": 23,
      "keymap": "/lib/udev/rc_keymaps/tivo.toml"
    },
    "wifi": {
      "enabled": false
    }
  },
  "systems": [
    "arcade",
    "atari2600",
    "atari7800",
    "atarilynx",
    "atarijaguar",
    "c64",
    "nes",
    "snes",
